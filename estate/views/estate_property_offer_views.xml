<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.ui.view" id="estate_property_offer_tree">

        <field name="name">estate.property.offer.tree</field>

        <field name="model">estate.property.offer</field>

        <field name="priority" eval="16"/>

        <field name="arch" type="xml">

            <tree string="Tests">

                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <field name="status"/>
                <button name="action_accept_offer" string="Accept" type="object" class="btn-success"/>
                <button name="action_refuse_offer" string="Refuse" type="object" class="btn-secondary"/>
            </tree>

        </field>

    </record>

    <record model="ir.ui.view" id="estate_property_offer_form">

        <field name="name">estate.property.offer.form</field>

        <field name="model">estate.property.offer</field>

        <field name="priority" eval="16"/>

        <field name="arch" type="xml">

            <form string="Test">

                <sheet>

                    <group>

                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status"/>

                    </group>

                </sheet>

            </form>

        </field>

    </record>

</odoo>